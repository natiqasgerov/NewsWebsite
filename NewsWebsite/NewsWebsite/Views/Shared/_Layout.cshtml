<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsWebsite</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.css" rel="stylesheet">

    <!-- FontAwesome Icons core CSS -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">

    <!-- Responsive styles for this template -->
    <link href="~/css/responsive.css" rel="stylesheet">

    <!-- Colors for this template -->
    <link href="~/css/colors.css" rel="stylesheet">

    <!-- Version Tech CSS for this template -->
    <link href="~/css/version/tech.css" rel="stylesheet">


</head>
<body>

    <header class="tech-header header">
        <div class="container-fluid">
            <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" asp-action="Index">News Portal</a>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index">Home</a>
                        </li>
                      
                        <li class="nav-item dropdown has-submenu hidden-md-down hidden-sm-down">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">News</a>
                            <ul class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                                <li style="margin-left: -15px;">
                                    <div class="container">
                                        <div class="tab" style="width: 220px; height: auto;">
                                            <button class="tablinks-active" style="text-align: left;"><a class="myyy"  asp-action="Index" asp-controller="News" asp-route-text="Technology">Technology</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Education">Education</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Health">Health</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Economy">Economy</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Global">Global</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Entertainment">Entertainment</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Sport">Sport</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="Index" asp-controller="News" asp-route-text="Others">Others</a></button>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>



                        <li class="nav-item">                     
                            <a class="nav-link" asp-action="Create">Create</a>
                        </li>

                        <li class="nav-item dropdown has-submenu hidden-md-down hidden-sm-down">
                            
                                
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
                            <ul class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                                <li style="margin-left: -15px;">
                                    <div class="container">
                                        <div class="tab" style="width: 220px; height: auto;">
                                            <button class="tablinks-active" style="text-align: left;"><a class="myyy" asp-action="Login">Sign In</a></button>
                                            <button class="tablinks" style="text-align: left;"><a class="myyy" asp-action="LogOut">Log Out</a></button>
                                            
                                        </div>
                                    </div>
                                </li>
                            </ul>

                        </li>


                    </ul>
                </div>
            </nav>
        </div><!-- end container-fluid -->
    </header>

    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 60px">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="widget">
                        <div class="footer-text text-left">
                            <a href="index.html"><img src="images/version/tech-footer-logo.png" alt="" class="img-fluid"></a>
                            <p>Tech Blog is a technology blog, we sharing marketing, news and gadget articles.</p>
                            <div class="social">
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Instagram"><i class="fa fa-instagram"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Google Plus"><i class="fa fa-google-plus"></i></a>
                                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Pinterest"><i class="fa fa-pinterest"></i></a>
                            </div>

                            <hr class="invis">

                            <div class="newsletter-widget text-left">
                                <form class="form-inline">
                                    <input type="text" class="form-control" placeholder="Enter your email address">
                                    <button type="submit" class="btn btn-primary">SUBMIT</button>
                                </form>
                            </div><!-- end newsletter -->
                        </div><!-- end footer-text -->
                    </div><!-- end widget -->
                </div><!-- end col -->

                <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                    <div class="widget">
                        <h2 class="widget-title">Popular Categories</h2>
                        <div class="link-widget">
                            <ul>
                                <li><a href="#">Marketing <span>(21)</span></a></li>
                                <li><a href="#">SEO Service <span>(15)</span></a></li>
                                <li><a href="#">Digital Agency <span>(31)</span></a></li>
                                <li><a href="#">Make Money <span>(22)</span></a></li>
                                <li><a href="#">Blogging <span>(66)</span></a></li>
                            </ul>
                        </div><!-- end link-widget -->
                    </div><!-- end widget -->
                </div><!-- end col -->

                <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">
                    <div class="widget">
                        <h2 class="widget-title">Copyrights</h2>
                        <div class="link-widget">
                            <ul>
                                <li><a href="#">About us</a></li>
                                <li><a href="#">Advertising</a></li>
                                <li><a href="#">Write for us</a></li>
                                <li><a href="#">Trademark</a></li>
                                <li><a href="#">License & Help</a></li>
                            </ul>
                        </div><!-- end link-widget -->
                    </div><!-- end widget -->
                </div><!-- end col -->
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <br>
                </div>
            </div>
        </div><!-- end container -->
    </footer><!-- end footer -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/tether.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
